<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/abu_abu"
        android:layout_margin="10sp"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv_wisata"
            android:scaleType="fitXY"
            android:src="@drawable/masjid_istiqlal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tes"
                android:textColor="@color/black"
                android:id="@+id/tv_wisata"
                android:textSize="25sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="70sp"
                android:layout_height="20sp"
                android:text="Info Masjid"
                android:textColor="@color/black"
                android:backgroundTint="#5CFF33"
                android:background="@drawable/button_info"
                android:gravity="center"
                android:id="@+id/tv_desc"
                android:textSize="12sp"
                android:maxLength="100"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tes"
                android:textColor="@color/black"
                android:id="@+id/tv"
                android:visibility="gone"
                android:textSize="25sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>